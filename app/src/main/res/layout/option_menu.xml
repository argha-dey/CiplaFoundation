<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/header_underline"
        android:elevation="10dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/header_underline" />

        <RelativeLayout
            android:id="@+id/rl_change_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logoLogin"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iv_change_roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/change_roll" />

            <TextView
                android:id="@+id/tv_changeRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_change_roll"
                android:background="@android:color/transparent"
                android:ems="6"
                android:singleLine="true"
                android:text="Change Role"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_first" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_second" />

        <RelativeLayout
            android:id="@+id/rl_login_as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logoLogin"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_login_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/loginas" />

            <TextView
                android:id="@+id/tv_login_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_login_as"
                android:background="@android:color/transparent"
                android:ems="6"
                android:singleLine="true"
                android:text="Login As"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_first" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_second" />

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logoLogin"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/logout" />

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_logout"
                android:background="@android:color/transparent"
                android:ems="6"
                android:singleLine="true"
                android:text="Logout"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

        </RelativeLayout>

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#888d8e" />-->

    </LinearLayout>
</RelativeLayout>